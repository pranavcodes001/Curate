# Hacker News API
HN_API_URL=https://hacker-news.firebaseio.com/v0

# Redis
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0

# Database (SQLite for MVP)
DATABASE_URL=sqlite:///./dev.db

# Fetching
FETCH_INTERVAL_SECONDS=60
FEED_LIMIT=50
FEED_TTL_SECONDS=300

# Search (HN Algolia)
SEARCH_API_URL=https://hn.algolia.com/api/v1/search
SEARCH_TTL_SECONDS=300
SEARCH_LIMIT=20
SEARCH_MAX_KEYWORDS=5
SEARCH_DB_TTL_DAYS=7

# Interests feed
INTEREST_REFRESH_SECONDS=86400
INTEREST_BACKLOG_LIMIT=50
INTEREST_STORY_LIMIT=10

# Top stories (global)
TOP_STORIES_LIMIT=50
TOP_STORIES_REFRESH_SECONDS=86400

# Cleanup
CLEANUP_INTERVAL_SECONDS=86400
CLEANUP_RETENTION_DAYS=7

# Summaries
SUMMARY_TTL_SECONDS=3600
SUMMARIZATION_MODEL_VERSION=mock-v1
SUMMARY_RATE_LIMIT_PER_HOUR=30
SUMMARY_QUEUE_MAX_PER_TICK=20

# Comments
COMMENTS_PREVIEW_LIMIT=3
COMMENTS_FETCH_LIMIT=10

# Saved threads
SAVED_THREAD_QUEUE_MAX_PER_TICK=10

# Other (placeholders)
LOG_LEVEL=INFO

# Auth (JWT)
JWT_SECRET=dev-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TTL_MINUTES=60
JWT_REFRESH_TTL_DAYS=30
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me

# DB auto-create (dev only)
DB_AUTO_CREATE=false

# OpenAI (Phase 3)
AI_PROVIDER=openai
OPENAI_API_KEY=your_key_here
OPENAI_MODEL=gpt-5-nano
